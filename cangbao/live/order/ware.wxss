/* pages/buybond/ware.wxss */
@import "../template/template.wxss";
.buyheader{
  width:750rpx;
  background:rgba(255,255,255,1);
  margin-top: 20rpx;
  padding:0 0 0 32rpx;
  box-sizing: border-box;
}
.buyheaderimg{
  width:180rpx;
  height:180rpx;
  background:rgba(216,216,216,1);
  position: relative;
  border-radius: 3px;overflow: hidden;
}
.buytype{
  position: absolute;
  bottom:0;right:0;
  width:27px;
  height:14px;
  background:linear-gradient(136deg,rgba(143,219,131,1) 0%,rgba(106,201,91,1) 100%);
  border-radius:3px;
  font-size:10px;
  color:rgba(255,255,255,1);
  line-height:14px;
  text-align: center;
}
.buyheaderimg image{
  width: 100%;
  height: 100%; 
}
.buyheaderdetails{
  margin-left: 32rpx;
}
.buyheaderdetails{
  height: 180rpx;
  display: flex;
  flex-direction:column; 
  justify-content: space-between;
}
.buytext{
  font-size:28rpx;
