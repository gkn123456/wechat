@import "../template/template.wxss";
.swiper-tab {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:15rpx 32rpx;
  box-sizing: border-box;
  height: 66px;
  position: relative;
  background: #393939;
}
.admbtn{
  width:50px;
  height: 100%;
  position: absolute;
  top:0;
  right:0;
  font-size:28rpx;
  line-height: 70rpx;
  color:rgba(68,68,68,1);
  text-align: right;
  padding-right:16px;
  box-sizing: border-box;
}
.admbtns{
  width:50px;
  height: 100%;
  position: absolute;
  top:0;
  left:0;
  font-size:28rpx;
  line-height: 70rpx;
  color:rgba(68,68,68,1);
  text-align: left;
  padding-left:16px;
  box-sizing: border-box;
}
.tab-item {
  text-align: center;
  margin-left:92px;
  font-size: 30rpx;
  color: #8F8F8F;
}
.tab-item:nth-child(1) {
  margin-left:0;
}
.on {
  color: #fff;
  font-size: 30rpx;
}
.selection{
  width: 40rpx;
  height: 6rpx;
  background:rgba(68,68,68,0);
  margin: 12rpx auto;
  border-radius:20rpx;
}
.on1{
  background: #EAEAEA;
}
.touo{
  width:100%;
  margin-top:66px;
  padding:0 16px;
  box-sizing: border-box;
  overflow: hidden;
}
.touw{
  width:100%;
  margin-top:66px;
  padding:0 16px;
  box-sizing: border-box;
}
.touo_li{
  width:100%;
  background: #fff;
  border:1px solid #ECECEC;
  height: 240px;
  margin-top:10px;
  border-radius:6px;
  overflow: hidden;
}
.touo_litop{
  width:100%;
  height: 78%;
  position: relative;
}
.touo_litop image{
  width:100%;
  height: 100%;
}
.touo_litop_s{
  position: absolute;
  top:0;
  right: 0;
  width:62px;
  height: 20px;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: linear-gradient(138deg,rgba(255,127,110,1) 0%,rgba(255,73,59,1) 100%);
  border-radius: 2rpx 2rpx 0rpx 2rpx;
  opacity: 0.7;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}
.touo_libom{
  width:100%;
  height: 22%;
  padding:8px 10px;
  box-sizing: border-box;
}
.touo_libom_1{
  width:100%;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.touo_libom_2{
  width:100%;
  font-size: 12px;
  color:#7f7f7f;
  margin-top:1px;
  text-align: right;
}
.touwbox{
  width:100%;
  overflow: hidden;
}
.touwli{
  width:100%;
  background: #fff;
  display: flex;
  margin-top:10px;
}
.imgbox{
  width:90px;
  height: 90px;
}
.imgbox image{
  width:100%;
  height: 100%;
}
.contbox{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10px;
  padding-right:10px;
  box-sizing: border-box;
  width:70%;
}
.contbox_title{
  font-size: 26rpx;
  color: rgba(68,68,68,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.contbox_state{
  padding:2px 0;
  width:60px;
  text-align: center;
  box-sizing: border-box;
  border:1px solid red;
  margin-top:10px;
  font-size: 12px;
  color:red;
}