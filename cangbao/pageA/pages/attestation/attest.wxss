/* pageA/pages/attestation/attest.wxss */
@import "../template/template.wxss";
.head{
  background: #fff;
  margin-top:20rpx;
  display: flex;
  align-items: center;
  padding:24rpx 32rpx;
  box-sizing: border-box;
}
.iscar{
  margin-left: 39px;
}
.carp{
  font-size:28rpx;
  font-weight:400;
  color:rgba(28,28,28,1);
}
.radio{
  font-size:24rpx;
  font-weight:400;
  color:rgba(28,28,28,1);
  display: flex;
  align-items: center;
}
.radio:last-child{
  margin-left: 98rpx;
}
radio{
  transform:scale(0.7);
  margin-right:8rpx ;
}
.radio-group{
  display: flex;
  align-items: center;
}
.cont{
  background: #fff;
  margin-top:20rpx;
  padding-left:32rpx;
  box-sizing: border-box;
}
.cont1{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1rpx solid #ECECEC;
  padding:28rpx 40rpx 28rpx 0;
  box-sizing: border-box;
}
.cont1 view{
  font-size:28rpx;
  font-weight:400;
  color:rgba(28,28,28,1);
}
.cont1 input{
  font-size:24rpx;
  font-weight:400;
  color:rgba(28,28,28,1);
  text-align: right;
  width: 70%;
}
.ph{
  background: #fff;
  margin-top:20rpx;
}
.phtop{
  font-size:28rpx;
  font-weight:400;
  color:rgba(28,28,28,1);
  padding:24rpx 32rpx;
  box-sizing: border-box;
}
.phcen{
  padding:20rpx 60rpx;
  box-sizing: border-box;
}

.phcen view image{
  width: 280rpx;
  height:210rpx;
}
.btn{
  background: #fff;
  width: 100%;
  padding: 14rpx 0;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom:0;
  left: 0;
}
.btns{
  width:184rpx;
  height:68rpx;
  text-align: center;
  line-height: 68rpx;
  background:rgba(255,55,64,1);
  border-radius:8rpx;
  font-size:32rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.chooseImageUpload{
  display: flex;
  justify-content: space-between;
  width:100%;
}
.imgbox{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.texts{
  margin-top:8px;
  font-size:10px;
  color:rgba(170,170,170,1);
}
.detail1{
  margin-top:20rpx;
  height: 84rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:2rpx solid rgba(236,236,236,1);
}
.detail1 text{
  font-size:28rpx;
  font-weight:400;
  color:rgba(78,62,62,1);
  
}
.detail1 input{
  text-align: right;
  font-size:24rpx;
  font-weight:400;
  color:rgba(78,62,62,1);
  width:80%;
}
.to1{
  width:37rpx;
  height:28rpx;
  margin-left:16rpx;
  margin-right: 10px;
}
.to2{
  width:37rpx;
  height:28rpx;
  margin-left:16rpx;
}
.picker{
  font-size:24rpx;
  font-weight:400;
  color:rgba(78,62,62,1);
  text-align: right;
}
.fot{
  font-size:12px;
color:rgba(170,170,170,1);
}
/* 分类 */
.class{
  position: fixed;
  bottom:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(28, 28, 28, 0.6);
  z-index: 99;
}
.classbox{
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 796rpx;
  z-index: 999;
  border-radius:20rpx 20rpx 0rpx 0rpx;
}
.classify-container{
  border-right: 2rpx solid #ececec;
  padding-top:24rpx;
}
scroll-view{
  width:auto;
}
.name{
  font-size: 28rpx;
  color: #1C1C1C;
  margin-left: 14rpx;
}
.goods{
  font-size: 28rpx;
  color:rgba(68,68,68,1);
  padding:25rpx 0;
}
.active{
  font-size: 32rpx;
  color: #FF3740; 
}
.on{
  width:6rpx;
  height:32rpx;
  background: #fff;
  border-radius: 3rpx;
}
.ons{
  background: #FF3740;
}
.classify{
  display: flex;
  align-items: center;
  padding:24rpx 22rpx 24rpx 12rpx;
}
.goods-container{
  padding-left: 20rpx;
  width: 70%;
}
.content-container{
  height: 676rpx;
}
.children_title{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.subtitle{
  width:80px;
  height:32px;
  text-align: center;
  line-height: 32px;
  background:rgba(248,248,248,1);
  border-radius:4px;
  font-size:14px;
  color:rgba(74,74,74,1);
  margin-bottom:16px;
  box-sizing: border-box;
