  height: 28rpx;
}
.first_level_title{
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:14px;
  color:rgba(74,74,74,1);
  padding:10px 0;
  box-sizing: border-box;
}
.hline{
  width:20px;
  height: 1px;
  background:#ECECEC;
}
scroll-view{
  height: 100%;
}
.subtitleon{
  border:1px solid rgba(255,55,64,1);
}