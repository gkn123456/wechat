/* pageA/pages/follow/follow.wxss */
@import "../template/template.wxss";
.pa{
  margin-top:20rpx;
}
.nopageimg{
  width:314rpx ;
  height:338rpx;
  position: absolute;
  top:50%;
  left: 50%;
  margin-top:-169rpx;
  margin-left:-118rpx; 
}
.page{
  width: 100%;
  height: 100%;
  -webkit-overflow-scrolling: touch;
}
.sell{
  padding-left:40rpx;
  background: #fff;
  
}
.sel{
  background: #fff;
  padding-right: 32rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1rpx solid #ECECEC;
}
.bt{
  height: 1rpx;
  background: #ECECEC;
}
.sell:last-child .bt{
  height: 0rpx;
}
.selleft{
  display: flex;
  align-items: center;
  width: 95%;
  padding:32rpx 0 32rpx 0;
  box-sizing: border-box;
}
.uimg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.selttop{
  display: flex;
  align-items: center;
}
.selttop view{
  font-size:32rpx;
  font-weight:500;
  color:rgba(28,28,28,1);
}
.selttop image{
  width: 100rpx;
  height: 32rpx;
  margin-left: 8rpx;
}
.seltbom{
  font-size:24rpx;
  color:rgba(35,17,13,1);
  margin-top:16rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.selrigh{
  font-size:28rpx;
  font-weight:500;
  color:rgba(170,170,170,1);
  padding-right:32rpx;
  box-sizing: border-box;
}
.selrighimg{
  width:12rpx;
  height:22rpx;
}
.selt{
  margin-left: 40rpx;
  width:75%;
}