/* pages/my/mywallet/balancedetails.wxss */
@import "../../template/template.wxss";
.head{
  padding-top:24rpx;
  padding-bottom:60rpx;
  box-sizing: border-box;
  background: #fff;
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:240rpx;
}
.kb{
  width:100%;
  height:240rpx;
}
.headtitle{
  font-size:24rpx;
  font-weight:400;
  color:rgba(28,28,28,1);
  text-align: center;
}
.headprice{
  text-align: center;
  margin-top:20rpx;
}
.htext1{
  font-size:48rpx;
  font-weight:500;
  color:rgba(28,28,28,1);
}
.htext2{
  font-size:96rpx;
  font-weight:500;
  color:rgba(28,28,28,1);
}
.cont{
  background: #fff;
  padding-left:32rpx;
  box-sizing: border-box;
  margin-top:20rpx;
}
.licont{
  background: #fff;
  padding:28rpx 0 28rpx 0;
  box-sizing: border-box;
  border-top:1rpx solid #ECECEC;
}
.licont:nth-child(1){
  border-top:0rpx solid rgba(216,216,216,0);
}
.litop{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right:32rpx;
  box-sizing: border-box;
}
.libottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right:32rpx;
  box-sizing: border-box;
}
.toptext1{
  font-size:28rpx;
  font-weight:400;
  color:rgba(28,28,28,1);
}
.toptext2{
  font-size:24rpx;
  font-weight:400;
  color:rgba(170,170,170,1);
}
.bottomtext1{
  font-size:24rpx;
  font-weight:400;
  color:rgba(170,170,170,1);
}
.bottomtext2{
  font-size:36rpx;
  font-weight:500;
  color:rgba(60,149,102,1);
}
.bottomtext3{
  font-size:36rpx;
  font-weight:500;
  color:rgba(28,28,28,1);
}
